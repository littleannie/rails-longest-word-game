<div class="container">
  <div class="title">
    <h1>New Game</h1>
  </div>
  <div class="game">
    <div class="grid">
        <% @letters.each do |letter| %>
        <div class="letter"><%= letter.upcase %></div>
        <% end %>
    </div>
    <div class="form">
      <p>What is the longest word you can find?</p>
        <form action="/score" method="post" data-turbo="false" class="input-group mb-3">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag 'letters', @letters %>
          <input type="text" class="form-control" placeholder="Type your word" aria-label="Type your word" aria-describedby="button-addon2" name="word">
          <input type="submit" class="btn btn-secondary" value="Play">
        </form>
    </div>
  </div>
</div>
